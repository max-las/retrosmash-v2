<div class="card game-card mb-3">
  <img
    src="<%= @params[:cover_path] %>"
    alt="<%= @params[:cover_alt] %>"
    class="card-img-top"
    data-handle="cover">
  <div class="card-body">
    <h5
      class="card-title fs-5 text-truncate"
      data-controller="tooltip"
      data-tooltip-title-value="<%= @params[:title] %>">
      <span data-slot="title"><%= @params[:title] %></span>
    </h5>
    <table class="table table-sm mb-0" data-slot="pegi">
      <tr>
        <td><span data-slot="players"><%= @params[:players] %></span> joueurs</td>
      </tr>
      <% if @params[:pegi].present? %>
        <%= render GameCard::PegiComponent.new(pegi: @params[:pegi]) %>
      <% end %>
    </table>
  </div>
</div>
