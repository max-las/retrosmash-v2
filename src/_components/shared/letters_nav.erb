<div class="mb-3">
  <% Game::EXTENDED_LETTERS.each do |letter| %>
    <% if @console.available_letters.include?(letter) %>
      <a href="<%= @console.games_letter_relative_url(letter) %>" class="btn btn-sm btn-light" role="button"><%= letter %></a>
    <% else %>
      <button type="button" class="btn btn-sm btn-light" disabled><%= letter %></button>
    <% end %>
  <% end %>
</div>
