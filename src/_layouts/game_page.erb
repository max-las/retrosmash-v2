---
layout: section
---

<div class="card border-0 mb-2 console-summary-card">
  <img
    class="card-img-top"
    src="<%= data.game_page.console.image_path %>"
    alt="<%= data.game_page.console.image_alt %>">
  <div class="card-body px-0 pb-0">
    <table class="table">
      <tbody>
        <tr>
          <th scope="row">Quantit√©</th>
          <td><%= data.game_page.console.quantity %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<h2 class="fs-3">Jeux disponibles</h2>
<hr>

<div
  data-controller="game-collection"
  data-game-collection-console-slug-value="<%= data.game_page.console.slug %>"
  data-game-collection-version-url-value="<%= data.game_page.console.game_collection_version_path %>"
  data-game-collection-collection-url-value="<%= data.game_page.console.game_collection_path %>">
</div>

<%= render Console::GameLettersNav.new(data.game_page) %>
<%= render Console::GamePagesNav.new(data.game_page) %>

<div class="d-flex flex-wrap gap-2">
  <% data.game_page.games.each do |game| %>
    <div class="card game-card mb-3">
      <img
        src="<%= game.cover_path %>"
        class="card-img-top"
        alt="<%= game.cover_alt %>">
      <div class="card-body">
        <h5 class="card-title fs-5 text-truncate">
          <%= game.title %>
        </h5>
        <p class="card-text">
          <%= "#{game.players} joueurs" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
