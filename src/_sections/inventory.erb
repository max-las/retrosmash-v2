---

<% collections.consoles.resources.group_by { it.model.publisher }.each do |publisher, resources| %>
  <h2 class="fs-3"><%= publisher %></h2>
  <div class="d-flex flex-wrap gap-2 mb-3">
    <% resources.sort_by { it.model.generation }.each do |resource| %>
      <% console = resource.model %>
      <a href="<%= resource.relative_url %>">
        <div class="card console-card">
          <div class="card-img-top console-card__logo-wrapper d-flex align-items-center justify-content-center p-3">
            <img src="<%= console.logo_path %>" class="console-card__logo" alt="<%= console.logo_alt %>">
          </div>
          <div class="card-body">
            <h5 class="card-title text-center"><%= console.name %></h5>
          </div>
        </div>
      </a>
    <% end %>
  </div>
<% end %>
